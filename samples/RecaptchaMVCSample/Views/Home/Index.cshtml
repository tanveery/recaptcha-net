@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model RecaptchaMVCSample.Models.UserRegistrationModel
@using Recaptcha.Web.Mvc;

<h2>User Registration Form</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary()
    <p>
        <label>Username:</label>
        @Html.TextBoxFor(m => m.UserName)
    </p>
    <p>
        <label>Password:</label>
        @Html.PasswordFor(m => m.Password)
    </p>
    <p>
        <label>First name:</label>
        @Html.TextBoxFor(m => m.FirstName)
    </p>
    <p>
        <label>Last name:</label>
        @Html.TextBoxFor(m => m.LastName)
    </p>
    
    <!-- Render reCAPTCHA widget with default properties. -->
    @Html.RecaptchaWidget()

    <!-- Render reCAPTCHA widget with Dark theme. -->
    // @Html.RecaptchaWidget(colorTheme: Recaptcha.Web.ColorTheme.Dark)

    <input type="submit" value="Submit" />
}

